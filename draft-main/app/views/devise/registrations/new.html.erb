<header class="site-header">
      <div class="container header__inner">
        <a class="logo" href="/">SMYSL</a>

        <nav class="topnav" aria-label="Основная навигация">
          <a class="topnav__link" href="/">Главная</a>
          <a class="topnav__link" href="/articles">Статьи</a>
          <a class="topnav__link" href="/cases">Кейсы</a>
          <a class="topnav__link" href="/process">Процесс и батлы</a>
          <a class="topnav__link" href="/about">О нас</a>
        </nav>

        <div class="header-actions">
          <% if user_signed_in? %>
            <span class="header-user">
              <%= current_user.email %>
            </span>

            <%= button_to "Выйти",
                  destroy_user_session_path,
                  method: :delete,
                  class: "header-btn header-btn--ghost" %>
          <% else %>
            <%= link_to "Войти",
                  new_user_session_path,
                  class: "header-btn" %>
          <% end %>
        </div>
      </div>
</header>

<main class="auth">
  <div class="container auth__inner">

    <div class="auth-card">
      <header class="auth-head">
        <h1 class="auth-title">Регистрация</h1>
        <p class="auth-subtitle">Создайте аккаунт, чтобы сохранять статьи и кейсы.</p>
      </header>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="auth-field">
          <%= f.label :email, "Email", class: "auth-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input", placeholder: "Ваш email" %>
        </div>

        <div class="auth-field">
          <div class="auth-labelrow">
            <%= f.label :password, "Пароль", class: "auth-label" %>
            <% if @minimum_password_length %>
              <span class="auth-hint"><%= @minimum_password_length %>+ символов</span>
            <% end %>
          </div>
          <%= f.password_field :password, autocomplete: "new-password", class: "auth-input", placeholder: "Придумайте пароль" %>
        </div>

        <div class="auth-field">
          <%= f.label :password_confirmation, "Повторите пароль", class: "auth-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-input", placeholder: "Повторите пароль" %>
        </div>

        <%= f.submit "Создать аккаунт", class: "auth-btn" %>

        <div class="auth-links">
          <span class="auth-links__text">Уже есть аккаунт?</span>
          <%= link_to "Войти", new_user_session_path, class: "auth-links__link" %>
        </div>
      <% end %>
    </div>

  </div>
</main>
