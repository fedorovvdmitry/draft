<header class="site-header">
      <div class="container header__inner">
        <a class="logo" href="/">SMYSL</a>

        <nav class="topnav" aria-label="Основная навигация">
          <a class="topnav__link" href="/">Главная</a>
          <a class="topnav__link" href="/articles">Статьи</a>
          <a class="topnav__link" href="/cases">Кейсы</a>
          <a class="topnav__link" href="/process">Процесс и батлы</a>
          <a class="topnav__link" href="/about">О нас</a>
        </nav>

        <div class="header-actions">
          <% if user_signed_in? %>
            <span class="header-user">
              <%= current_user.email %>
            </span>

            <%= button_to "Выйти",
                  destroy_user_session_path,
                  method: :delete,
                  class: "header-btn header-btn--ghost" %>
          <% else %>
            <%= link_to "Войти",
                  new_user_session_path,
                  class: "header-btn" %>
          <% end %>
        </div>
      </div>
</header>

<main class="auth">
  <div class="container auth__inner">

    <div class="auth-card">
      <header class="auth-head">
        <h1 class="auth-title">Вход</h1>
        <p class="auth-subtitle">Введите email и пароль, чтобы продолжить.</p>
      </header>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="auth-field">
          <%= f.label :email, "Email", class: "auth-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input", placeholder: "Ваш email" %>
        </div>

        <div class="auth-field">
          <%= f.label :password, "Пароль", class: "auth-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "auth-input", placeholder: "Ваш пароль" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <label class="auth-check">
            <%= f.check_box :remember_me, class: "auth-check__input" %>
            <span class="auth-check__box" aria-hidden="true"></span>
            <span class="auth-check__text">Запомнить меня</span>
          </label>
        <% end %>

        <%= f.submit "Войти", class: "auth-btn" %>

        <div class="auth-links">
          <span class="auth-links__text">Нет аккаунта?</span>
          <%= link_to "Зарегистрироваться", new_user_registration_path, class: "auth-links__link" %>
        </div>

        <div class="auth-links auth-links--secondary">
          <%= link_to "Забыли пароль?", new_user_password_path, class: "auth-links__link auth-links__link--muted" %>
        </div>
      <% end %>
    </div>

  </div>
</main>
